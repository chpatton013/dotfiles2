# This file contains config options that control the UX of the git command-line
# tools.

[diff]
  # '<=0' means "no limit"
  # NOTE: Acts as the default for merge.renamelimit and status.renamelimit if
  # either isn't explicitly set.
  renamelimit = 0

[fetch]
  prune = true

[mergetool]
  keepBackup = false
  prompt = false

[push]
  default = current

[pull]
  rebase = true

[rebase]
  autoStash = true

[rerere]
  enabled = true

[delta]
  navigate = true
